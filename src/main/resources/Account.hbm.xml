<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	 <class name="com.iiitb.ooadvoid.pojo.FlopkartAccount" table="flopkartaccount">
	 
      <meta attribute = "class-description">
         This class contains the Flopkart account detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "userid" column = "userid" type = "int"   unique="true"/>
      <property name = "accountno" column = "accountno" type = "int"/>
      <property name = "balance" column = "balance" type = "int"/>
      <property name = "pin" column = "pin" type = "string"/>
      
     
	</class>
</hibernate-mapping>